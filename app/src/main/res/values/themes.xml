<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ShopTastic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/chaos_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="TIRAMISU">?attr/colorPrimaryVariant</item>

        <!-- Splash screen customization -->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <!--        <item name="android:windowSplashScreenBrandingImage">@drawable/goods_brand</item>-->
        <item name="android:windowSplashScreenAnimationDuration">3000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/full_transparent</item>
    </style>

    <style name="Theme.RemoveSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/black_is_back</item>
        <item name="colorPrimaryVariant">@color/chaos_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="Q">?attr/colorPrimaryVariant</item>
    </style>

    <style name="RoundedTopImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="CircularBox" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">2dp</item>
        <item name="cornerSizeTopRight">2dp</item>
        <item name="cornerSizeBottomLeft">2dp</item>
        <item name="cornerSizeBottomRight">2dp</item>
    </style>

</resources>